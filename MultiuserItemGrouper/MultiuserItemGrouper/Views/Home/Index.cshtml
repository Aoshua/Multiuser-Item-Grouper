@{
    ViewData["Title"] = "Home Page";
}

<input type="hidden" id="hidUser" value="@ViewBag.Username" />
<div id="divUser" style="display: none;"></div>
<div class="container-fluid">
    <div class="text-center">
        <h1 class="display-4" style="font-size: 3rem;">Grouper</h1>
    </div>
    <div class="row" style="padding-bottom: 5px;">
        <div class="col-lg-4 col-md-6 col-sm-11" style="padding: 0px;">
            <div class="form-group">
                <div style="display: flex; justify-content: space-between;">
                    <label for="cboGroup">Select Group:</label>
                    <div style="text-align: right; color: #00CC6F; cursor: pointer;" data-toggle="modal" data-target="#addGroupModal">
                        <i class="fa fa-plus"></i>&ensp;Add Group
                    </div>
                </div>
                <select class="form-control" id="cboGroup" onchange="selectGroup()"></select>
            </div>
        </div>
    </div>
    <div class="row">
        <div style="width: 100%; text-align: right; color: #00CC6F; cursor: pointer; margin-bottom: 8px;" data-toggle="modal" data-target="#addItemModal">
            <i class="fa fa-plus"></i>&ensp;Add Item
        </div>
        <div id="itemsContainer">
            @* Items are loaded here *@
        </div>
    </div>
</div>
<div class="modal fade" id="addGroupModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Group</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="cboGroup">Group Name:</label>
                    <input type="text" class="form-control" id="txtNewGroupName">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal" onclick="addGroup()">Create</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="addItemModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="itemModalTitle">Add Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="txtNewGroupName">Item Name:</label>
                    <input type="text" class="form-control" id="txtItemName">
                </div>
                <div class="form-group">
                    <label for="txtItemBody">Item Content:</label>
                    <textarea class="form-control" id="txtItemBody" rows="3" ></textarea>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="chkItemHidden">
                    <label class="form-check-label" for="chkItemHidden">
                        Hidden
                    </label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal" onclick="addItem()">Add</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

